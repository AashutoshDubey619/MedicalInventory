<%- include('partials/header') %>

  <h2 class="mb-4">Manage Suppliers</h2>

  <!-- 1. Add New Supplier Form -->
  <div class="card shadow-sm mb-4">
    <div class="card-header">
      <h5 class="mb-0">Add New Supplier</h5>
    </div>
    <div class="card-body">
      <form action="/suppliers/add" method="POST">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="name" class="form-label">Supplier Name:</label>
            <input type="text" class="form-control" id="name" name="name" required>
          </div>
          <div class="col-md-6 mb-3">
            <label for="contact_person" class="form-label">Contact Person:</label>
            <input type="text" class="form-control" id="contact_person" name="contact_person">
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="phone" class="form-label">Phone:</label>
            <input type="tel" class="form-control" id="phone" name="phone">
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Add Supplier</button>
      </form>
    </div>
  </div>

  <!-- 2. Current Suppliers List -->
  <div class="card shadow-sm">
    <div class="card-header">
      <h5 class="mb-0">Current Suppliers</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
          <thead>
            <tr>
              <th scope="col" class="ps-3">Name</th>
              <th scope="col">Contact Person</th>
              <th scope="col">Phone</th>
            </tr>
          </thead>
          <tbody>
            <% if (suppliers.length === 0) { %>
              <tr>
                <td colspan="3" class="text-center text-muted p-3">No suppliers found. Add one above to get started.</td>
              </tr>
            <% } %>
            <% suppliers.forEach(sup => { %>
              <tr>
                <td class="ps-3"><%= sup.NAME %></td>
                <td><%= sup.CONTACT_PERSON %></td>
                <td><%= sup.PHONE %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%- include('partials/footer') %>
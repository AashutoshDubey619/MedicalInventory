<%- include('partials/header') %>

  <h1 style="text-align: center;">Available Medicines</h1>
  
  <div class="card-container">
    
    <% medicines.forEach(med => { %>
      
      <div class="medicine-card">
        
        <img src="<%= med.IMAGE_FILENAME %>" alt="<%= med.NAME %>" 
             onerror="this.src='https://placehold.co/250x180/eee/aaa?text=No+Image';">
        
        <div class="card-content">
          <h3><%= med.NAME %></h3>
          <p><%= med.DESCRIPTION %></p>
        </div>
        
      </div>
      
    <% }); %>
    
    <% if (medicines.length === 0) { %>
      <p style="text-align: center;">No medicines found in the system yet.</p>
    <% } %>
    
  </div>

<%- include('partials/footer') %>
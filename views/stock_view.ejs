<%- include('partials/header') %>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Current Stock Inventory</h2>
    <a href="/stock/add" class="btn btn-success">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16" style="margin-top: -3px; margin-right: 3px;"><path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/><path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/></svg>
      Add New Stock
    </a>
  </div>
  
  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-striped table-hover mb-0">
          <thead class="table-dark">
            <tr>
              <th scope="col" class="ps-3">Batch ID</th>
              <th scope="col">Medicine Name</th>
              <th scope="col">Supplier Name</th>
              <th scope="col">Qty Left</th>
              <th scope="col">Cost/Unit</th>
              <th scope="col">Purchase Date</th>
              <th scope="col">Expiry Date</th>
            </tr>
          </thead>
          <tbody>
            <% if (stockItems.length === 0) { %>
              <tr>
                <td colspan="7" class="text-center text-muted p-4">
                  Your inventory is empty.
                  <a href="/stock/add">Add some stock</a> to get started.
                </td>
              </tr>
            <% } %>
            <% stockItems.forEach(item => { %>
              <tr>
                <td class="ps-3"><%= item.BATCH_ID %></td>
                <td><%= item.MEDICINE_NAME %></td>
                <td><%= item.SUPPLIER_NAME %></td>
                <td>
                  <!-- Expiry/Stock highlighting -->
                  <% if (item.IS_NEAR_EXPIRY) { %>
                    <span class="badge bg-warning text-dark"><%= item.QUANTITY_REMAINING %></span>
                  <% } else if (item.IS_LOW_STOCK) { %>
                    <span class="badge bg-danger"><%= item.QUANTITY_REMAINING %></span>
                  <% } else { %>
                    <span class="badge bg-success"><%= item.QUANTITY_REMAINING %></span>
                  <% } %>
                </td>
                <td><%= item.COST_PER_UNIT ? `$${item.COST_PER_UNIT.toFixed(2)}` : 'N/A' %></td>
                <td><%= new Date(item.PURCHASE_DATE).toLocaleDateString() %></td>
                <td>
                  <% if (item.IS_NEAR_EXPIRY) { %>
                    <strong class="text-warning"><%= new Date(item.EXPIRY_DATE).toLocaleDateString() %></strong>
                  <% } else { %>
                    <%= new Date(item.EXPIRY_DATE).toLocaleDateString() %>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<%- include('partials/footer') %>
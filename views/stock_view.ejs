<%- include('partials/header') %>

  <h2>Current Stock</h2>
  
  <table class="table" border="1" style="width:100%; border-collapse: collapse;">
    <thead>
      <tr>
        <th>Batch ID</th>
        <th>Medicine Name</th>
        <th>Supplier</th>
        <th>Quantity Left</th>
        <th>Expiry Date</th>
      </tr>
    </thead>
    <tbody>
      
      <% stockItems.forEach(item => { %>
        <tr>
          <td><%= item.BATCH_ID %></td>
          <td><%= item.NAME %></td>
          <td><%= item.SUPPLIER_NAME %></td>
          <td><%= item.QUANTITY_REMAINING %></td>
          <td><%= new Date(item.EXPIRY_DATE).toLocaleDateString() %></td>
        </tr>
      <% }); %>
      
      <% if (stockItems.length === 0) { %>
        <tr>
          <td colspan="5" style="text-align: center;">No stock found. Please add stock.</td>
        </tr>
      <% } %>
      
    </tbody>
  </table>

<%- include('partials/footer') %>